{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["plugin:react/recommended", "airbnb"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2021
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "prettier/prettier": ["error"],
    "no-console": 2,
    "no-debugger": "error",
    "no-alert": "error",
    "default-case": "error",
    "max-len": ["error", { "code": 120 }],
    "prefer-promise-reject-errors": ["off"],
    "no-return-assign": ["off"]
    // "arrow-body-style": ["error", "always"]
  }
}
